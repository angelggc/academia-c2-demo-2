generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  // Use a valid SQLite URL starting with `file:`. This points to apps/backend/data/db.db
  url      = "file:../data/db.db"
}

model Provision {
  id            String          @id
  title         String
  description   String
  price         Int
  clientId      String
  client        User            @relation(fields: [clientId], references: [id])
  CartProvision CartProvision[]
}

model User {
  id        String      @id
  name      String
  email     String
  password  String
  role      String
  Provision Provision[]
  Cart      Cart[]
}

model Cart {
  id            String          @id
  userId        String
  user          User            @relation(fields: [userId], references: [id])
  provisionIds  String
  CartProvision CartProvision[]
}

model CartProvision {
  id          String    @id
  cartId      String
  cart        Cart      @relation(fields: [cartId], references: [id])
  provisionId String
  provision   Provision @relation(fields: [provisionId], references: [id])
}
